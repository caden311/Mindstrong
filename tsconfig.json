{
    "compilerOptions": {
      "outDir": "./dist/",
      "noImplicitAny": true,
      "module": "commonjs",
      "target": "es2016",
      "lib": [
        "es6",
        "dom"
      ],
      "types": [
        // add node as an option
        "node",
        "reflect-metadata"
      ],
      "typeRoots": [
        // add path to @types
        "node_modules/@types"
      ],
      "sourceMap": true,
      "moduleResolution": "node",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "resolveJsonModule": true

    },
    "exclude": [
      "node_modules",
      "clientApp"
    ]
  }